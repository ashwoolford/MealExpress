<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:id="@+id/order_food_name"
        android:textColor="#000"
        android:text="Chicken Bacon Classic"/>
    <View
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:id="@+id/order_des"
        android:text="A tender 13 oz. seasoned T bone steak with six golden fried shrimp. Serverd with your choice of two siddes and dinner bread."/>

</LinearLayout>